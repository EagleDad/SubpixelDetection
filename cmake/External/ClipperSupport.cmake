
set( CLIPPER_VERSION "1.0.5")
set( PROJECT_NAME "clipper2")

ExternalProject_Add(
    ${PROJECT_NAME}
    PREFIX ${FETCHCONTENT_BASE_DIR}/${PROJECT_NAME}
    GIT_REPOSITORY      https://github.com/AngusJohnson/Clipper2.git
    GIT_TAG             Clipper2_1.0.5
    SOURCE_DIR "${FETCHCONTENT_BASE_DIR}/${PROJECT_NAME}/${PROJECT_NAME}-${CLIPPER_VERSION}/src/"
    SOURCE_SUBDIR "CPP"
    BINARY_DIR "${FETCHCONTENT_BASE_DIR}/${PROJECT_NAME}/${PROJECT_NAME}-${CLIPPER_VERSION}/build"
    INSTALL_DIR "${FETCHCONTENT_BASE_DIR}/${PROJECT_NAME}/${PROJECT_NAME}-${CLIPPER_VERSION}/install"
    CMAKE_ARGS
    -DCMAKE_INSTALL_PREFIX:PATH=<INSTALL_DIR>
    -DCMAKE_BUILD_TYPE=Release
    -DCMAKE_DEBUG_POSTFIX:STRING=-d
   
)

list(APPEND DEPENDENCIES ${PROJECT_NAME})

set(Clipper2_DIR "${FETCHCONTENT_BASE_DIR}/${PROJECT_NAME}/${PROJECT_NAME}-${CLIPPER_VERSION}/install")

list(APPEND EXTRA_CMAKE_ARGS
    -DClipper2_DIR:PATH=${Clipper2_DIR}
)
